<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".DeptCm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/top_about"
                android:layout_width="165dp"
                android:layout_height="145dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/login_top"
                android:transitionName="top_image" />

            <TextView
                android:id="@+id/bank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="left"
                android:text="Bank "
                android:textColor="#ffff"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/verify_top_circle2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/top_about"
                android:scaleType="fitXY"
                android:src="@drawable/circle1_top" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                app:neomorph_background_color="@color/bgcolor"
                app:neomorph_corner_radius="10dp"
                app:neomorph_elevation="6dp"
                app:neomorph_highlight_color="#ffff"
                app:neomorph_shadow_color="#B2C0F3"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Available banks in campus:"
                        android:textAlignment="center"
                        android:textColor="#4B339A"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:justificationMode="inter_word"
                        android:padding="8dp"
                        android:text="1. Janalaxmi Sahkari Bank Ltd, NashikBusiness Hours: /nMonday to Saturday: 10.00 am to 5.00 pmBreak Time: 2.30 pm to 3.00 pmSecond-Forth Saturday and Sunday holiday"
                        android:textAlignment="textStart"
                        android:textColor="#7156C7"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:justificationMode="inter_word"
                        android:padding="8dp"
                        android:text="2. Kallappanna Awade Ichalkaranji Janta Sahkari Bank Ltd., NashikBusiness Hours:/nMonday to Saturday: 10.30 am to 5.30 pmBreak Time: 2.30 pm to 3.00 pmSecond -Forth Saturday and Sunday holidayThe above Bank facility is also available to residents of nearby area."
                        android:textAlignment="textStart"
                        android:textColor="#7156C7"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"

                        />


                </LinearLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




        </LinearLayout>

    </LinearLayout>


</ScrollView>