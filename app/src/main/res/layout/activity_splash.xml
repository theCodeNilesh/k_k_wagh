<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="K"
        android:textColor="#8637E1"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_logo" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="K"
        android:textColor="#8637E1"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@id/txt3"
        app:layout_constraintStart_toEndOf="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@+id/main_logo" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="100dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Wagh"
        android:textColor="#8637E1"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@+id/main_logo"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Polytechnic"
        android:textColor="#8637E1"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        />
    
    <ImageView
        android:id="@+id/left_top"
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/left_top"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/right_top"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/right_top"
        />

    <ImageView
        android:id="@+id/right_bottom"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/right_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/left_center"
        android:layout_width="60dp"
        android:layout_height="290dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/left_center"

        />

    <ImageView
        android:id="@+id/right_center"
        android:layout_width="35dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/right_center"
        app:layout_constraintBottom_toTopOf="@+id/right_bottom"
        app:layout_constraintTop_toBottomOf="@id/right_top"
        />
    



</androidx.constraintlayout.widget.ConstraintLayout>